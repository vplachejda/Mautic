{% extends app.request.xmlHttpRequest ? 'MauticCoreBundle:Default:content.html.twig' : 'MauticUserBundle:Security:base.html.twig' %}

{% block content %}
    <div class="alert alert-warning">{% trans %}mautic.user.user.passwordreset.info{% endtrans %}</div>
        {{ form_start(form) }}
        {{ form_row(form.identifier) }}
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}
    <div class="mt-sm">
        <a href="{{ path('login') }}">{% trans %}mautic.user.user.passwordreset.back{% endtrans %}</a>
    </div>
{% endblock %}
