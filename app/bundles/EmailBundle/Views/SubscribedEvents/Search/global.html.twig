{% if showMore is not empty %}
    <a href="{{ path('mautic_email_index', {'search' : searchString }) }}" data-toggle="ajax">
        <span>{{ 'mautic.core.search.more'|trans ({ '%count%' : remaining }) }}</span>
    </a>
{% else %}
    <a href="{{ path('mautic_email_action', {'objectAction' : 'view', 'objectId' : $email.getId()}) }}" data-toggle="ajax">
        {{ email.getName() }}
        <span class="label label-default pull-right" data-toggle="tooltip" title="{{ 'mautic.email.readcount'|trans }}" data-placement="left">
            {{ email.getReadCount() }}
        </span>
    </a>
{% endif %}
