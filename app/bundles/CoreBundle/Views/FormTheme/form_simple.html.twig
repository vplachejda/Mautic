{% extends 'MauticCoreBundle:FormTheme:form.html.php' %}
{% set hasRightColumn = block('rightFormContent') is defined %}
{% set modalView      = app.getRequest().get('modal', false) or block('inModal') is defined %}
{% block mainFormContent %}
<div class="box-layout">
    <div class="col-md-{{ hasRightColumn and not modalView ? 9 : 12 }} bg-auto height-auto bdr-r">
        <div class="pa-md">
            {{ block('primaryFormContent') }}
        </div>
    </div>
    {% if hasRightColumn %}
    <div class="col-md-<?php echo $modalView ? 12 : 3; ?> bg-white height-auto">
        <div class="pr-lg pl-lg pt-md pb-md">
            {{ block('rightFormContent') }}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
