{% set type = type|default('select') %}
<div class="{{ type }}">
    {% if form is defined or form.vars.value is not empty %}
      {{ selectTemplate|replace({
          ('properties_'~type~'_template'): 'leadfield_properties',
          'properties': 'leadfield_properties_template'
      })|raw }}
    {% else %}
      {{ form_row(form) }}
    {% endif %}
</div>
